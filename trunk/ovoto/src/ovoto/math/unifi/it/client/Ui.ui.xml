<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
		.header {
			background-color: lightGray;
			border: 1pt solid #009;
			font-size: 14pt;
			text-align: center;
			padding: 5px;
			
		}
		
		.body {
			background-color: lightGray;
			/*border: 1pt solid #009;*/
		}
		
		.sidebar {
			background-color: lightGray;
			border-right: 1pt solid #009;
			width: 100%;
		}
		
		.messages {
			background-color: white;
			border-top: 1pt solid #009;
			width: 100%;
		}
		
	</ui:style>


	<g:DockLayoutPanel unit='EM'>
		<g:north size='3'>
			<g:HTML addStyleNames="{style.header}" ui:field="header">
				O'voto	
			</g:HTML>
		</g:north>
		<g:center>
			<g:ScrollPanel addStyleNames="{style.body}" ui:field="body"></g:ScrollPanel>
		</g:center>
		<g:west size='10'>
			<g:VerticalPanel addStyleNames="{style.sidebar}" ui:field="sidebar">
			</g:VerticalPanel>
		</g:west>
		<g:south size='3'>
			<g:HTML addStyleNames="{style.messages}" ui:field="messages">
			</g:HTML>
		</g:south>
	</g:DockLayoutPanel>
</ui:UiBinder>
 